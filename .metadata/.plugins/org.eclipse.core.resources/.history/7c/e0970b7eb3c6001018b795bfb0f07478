package com.filter;

import java.io.IOException;
import javax.servlet.Filter;
import javax.servlet.FilterChain;
import javax.servlet.FilterConfig;
import javax.servlet.ServletException;
import javax.servlet.ServletRequest;
import javax.servlet.ServletResponse;
import javax.servlet.annotation.WebFilter;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;
import com.model.User;

// 登录拦截器：验证Session，未登录则重定向到登录页
@WebFilter("/*") // 拦截所有请求（后续在web.xml中配置排除项）
public class LoginFilter implements Filter {

    @Override
    public void init(FilterConfig fConfig) throws ServletException {}

    @Override
    public void doFilter(ServletRequest request, ServletResponse response, FilterChain chain)
            throws IOException, ServletException {
        // 转换为HTTP请求/响应（因需操作Session和重定向）
        HttpServletRequest req = (HttpServletRequest) request;
        HttpServletResponse resp = (HttpServletResponse) response;

        // 1. 获取当前请求路径（如：/login.jsp、/register、/success.jsp）
        String url = req.getRequestURI();
        // 2. 定义不需要拦截的路径（登录/注册相关、静态资源）
        boolean isExclude = url.contains("login.jsp") 
                || url.contains("register.jsp") 
                || url.contains("LoginServlet") 
                || url.contains("RegisterServlet") 
                || url.contains("css/") 
                || url.contains("js/");

        // 3. 不需要拦截：直接放行
        if (isExclude) {
            chain.doFilter(request, response);
            return;
        }

        // 4. 需要拦截：验证Session中是否有登录用户
        HttpSession session = req.getSession();
        User loginUser = (User) session.getAttribute("loginUser");

        // 5. 未登录：重定向到登录页，提示“非法访问”
        if (loginUser == null) {
            req.setAttribute("msg", "非法访问，请先登录！");
            // 转发到登录页（保留提示信息）
            req.getRequestDispatcher("/login.jsp").forward(req, resp);
            return;
        }

        // 6. 已登录：放行，允许访问目标资源
        chain.doFilter(request, response);
    }

    @Override
    public void destroy() {}
}